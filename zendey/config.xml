<?xml version='1.0' encoding='utf-8'?>
<widget id="com.zendey.flashcard" version="0.0.1" 
	android-versionCode="1"
	ios-CFBundleVersion="0.0.1"
	windows-packageVersion="0.0.0.1"
	xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Zendey</name>
    <description>
        Zendey Flashcards.  Fun learning for kids.
    </description>
    <author email="info@zendey.com" href="http://zendey.com">
        Zendey
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<icon src="asset/image/icon/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
		<icon src="asset/image/icon/icon-ldpi.png" density="ldpi" />
		<icon src="asset/image/icon/icon-mdpi.png" density="mdpi" />
		<icon src="asset/image/icon/icon-hdpi.png" density="hdpi" />
		<icon src="asset/image/icon/icon-xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="Fullscreen" value="true" />
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="Orientation" value="landscape" />
	<platform name="android">
		<!-- you can use any density that exists in the Android project -->
		<splash src="asset/image/splash_screen/Default-Landscape@2x.png" density="land-hdpi"/>
		<!--splash src="res/screen/android/splash-land-ldpi.png" density="land-ldpi"/>
		<splash src="res/screen/android/splash-land-mdpi.png" density="land-mdpi"/>
		<splash src="res/screen/android/splash-land-xhdpi.png" density="land-xhdpi"/>

		<splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
		<splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
		<splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
		<splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/-->
	</platform>
</widget>
